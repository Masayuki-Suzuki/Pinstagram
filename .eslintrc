{
  "parser": "babel-eslint",
  "extends": [
    "airbnb"
  ],
  "rules": {
    "semi": ["error", "never"],
    "max-len": ["error", { "code": 300 }],
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "react/prop-types": [
      2,
      {
        "ignore": [
          "navigator"
        ]
      }
    ],
    "jsx-a11y/anchor-is-valid": false
  },
  "globals": {
    "window": true,
    "document": true,
    "location": true,
    "requestAnimationFrame": true,
    "sessionStorage": true
  }
}
